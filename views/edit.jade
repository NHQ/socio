      input(type = 'text', name = 'email', id = 'email')
      span password :
      input(type = 'password', name = 'password', id = 'password')
    input(type = 'submit', value = 'Send')
- if (session)
  div#admin
    ul
      li 
        a(href='#edit') edit this page
div#console
  div#menu
    img#subject(src=person.facts.portrait.pic, width='350px', height="200px")
    =person.facts.email
    div#menu 
      ul.picker Testimonials
      ul.picker Profile
        li#bio Bio
        li#work Work
        li#learning Learning
        li#contact Contact
      ul.picker Projects
        - if (stuff.projects.length)
          -each p in stuff.projects
            li(id=p)= p
      ul.picker Portfolio
        - if (stuff.articles.length)
          -each a in stuff.articles
            li(id=a)= a
  div#content  
    - if (stuff.blurbi.length)
      -each a in stuff.blurbi
        li= a

